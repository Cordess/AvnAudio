@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <div style="background: lightyellow; padding: 20px;">
                        <p>⏳ Checking authorization in App.razor...</p>
                    </div>
                </Authorizing>
                <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated != true)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <p role="alert">You are not authorized to access this resource.</p>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    private bool _redirecting = false;

    protected override async Task OnInitializedAsync()
    {
        await JS.InvokeVoidAsync("console.log", "=== App.razor: Initialized ===");

        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var isAuthenticated = user.Identity?.IsAuthenticated ?? false;
            var userName = user.Identity?.Name ?? "Anonymous";

            await JS.InvokeVoidAsync("console.log", $"User authenticated: {isAuthenticated}");
            await JS.InvokeVoidAsync("console.log", $"User name: {userName}");
            await JS.InvokeVoidAsync("console.log", $"User claims count: {user.Claims.Count()}");

            // Log all claims for debugging
            foreach (var claim in user.Claims)
            {
                await JS.InvokeVoidAsync("console.log", $"  Claim: {claim.Type} = {claim.Value}");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("console.error", $"Error getting auth state: {ex.Message}");
        }
    }

    
}